{
  "settings": {
    "react": {
      "version": "latest"
    }
  },
  "extends": [
    "airbnb",
    "plugin:promise/recommended"
  ],
  "plugins": [
    "mocha",
    "promise"
  ],
  "env": {
    "commonjs": true,
    "node": true
  },
  "rules": {
    "max-len": ["error", {
      "code": 120,
      "ignoreStrings": true,
      "ignoreTrailingComments": true
    }],
    "no-param-reassign": "off"
  }
}
